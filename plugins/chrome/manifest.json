{
    "manifest_version": 3,
    "name": "Random User Viewer",
    "version": "1.1",
    "description": "A Chrome extension to generate and view random user profiles.",
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon128.png"
    },
    "permissions": [],
    "web_accessible_resources": [
        {
            "resources": [
                "libs/*"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'; style-src 'self' 'unsafe-inline';"
    }
}